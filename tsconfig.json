{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src"
    ]
}
